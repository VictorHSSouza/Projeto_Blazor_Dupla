@page "/clientes"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject Projeto_Blazor_Dupla.Data.ApplicationDbContext DB
@using Projeto_Blazor_Dupla.Data

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="clientes/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DB.Clientes">
    <PropertyColumn Property="cliente => cliente.Nome" />
    <PropertyColumn Property="cliente => cliente.DtNascimento" />

    <TemplateColumn Context="cliente">
        <a href="@($"clientes/edit?id={cliente.Id}")">Edit</a> |
        <a href="@($"clientes/details?id={cliente.Id}")">Details</a> |
        <a href="@($"clientes/delete?id={cliente.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
